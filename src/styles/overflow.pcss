/**
 * Opacity
 */

@each $bp in var(--fn-breakpoints) {
  @media (--$bp) {
    .$(bp)-oh {
      overflow: hidden;
    }

    .$(bp)-oxh {
      overflow-x: hidden;
    }

    .$(bp)-oyh {
      overflow-y: hidden;
    }

    .$(bp)-os {
      overflow: scroll;
    }

    .$(bp)-oxs {
      overflow-x: scroll;
    }

    .$(bp)-oys {
      overflow-y: scroll;
    }

    .$(bp)-oa {
      overflow: auto;
    }

    .$(bp)-oxa {
      overflow-x: auto;
    }

    .$(bp)-oya {
      overflow-y: auto;
    }
  }
}
