/**
 * Display
 */

@each $key in var(--breakpoints) {
  @media (--$key) {
    .$(key)-df {
      display: flex;
    }

    .$(key)-db {
      display: block;
    }

    .$(key)-dib {
      display: inline-block;
    }

    .$(key)-di {
      display: inline;
    }

    .$(key)-dt {
      display: table;
    }

    .$(key)-dtc {
      display: table-cell;
    }

    .$(key)-dtr {
      display: table-row;
    }

    .$(key)-dn {
      display: none;
    }
  }
}
